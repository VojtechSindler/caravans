{* Latte template *}

{block content}
<div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <th></th>
            <th>Nadpis</th>
            <th>Akce</th>
        </tr>
        {foreach $articles as $article}
            <tr>        
                <td><img style="width:20px" src="{$basePath}/images/vlajka{$article->jazyk}.png"></td>
                <td>{$article['nadpis']}</td>
                <td><a n:href="view, $article->id_clanek, $article->jazyk" class="ico view">Zobrazit</a></td>
            </tr>
        {/foreach}
    </table>
</div>
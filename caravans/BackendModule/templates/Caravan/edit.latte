{* Latte template *}

{block content}
{form addCaravanForm}    <div n:if="$form->ownErrors" class="msg msg-error" >
        <p n:foreach="$form->ownErrors as $error">{$error}</p>
    </div>
    <table class="table1">
        <tr>
            <td>{label znacka /}</td>
            <td>{input znacka class => 'field'}</td>
        </tr>
        <tr>
            <td>{label typ /}</td>
            <td>{input typ class => 'field'}</td>
        </tr>
        <tr>
            <td>{label cena /}</td>
            <td>{input cena class => 'small-field'} Kč</td>
        </tr>
        <tr>
            <td>{label exterier /}</td>
            <td>{input exterier class => 'field'}</td>
        </tr>
        <tr>
            <td>{label podvozek /}</td>
            <td>{input podvozek class => 'field'}</td>
            <td>{label podvozek2 /}</td>
            <td>{input podvozek2 class => 'field'}</td>
        </tr>
        <tr>
            <td>{label pneu /}</td>
            <td>{input pneu class => 'field'}</td>
        </tr>
        <tr>
            <td>{label napajeni /}</td>
            <td>{input napajeni class => 'field'}</td>
        </tr>
        <tr>
                <td>{label barva /}</td>
            <td>{input barva class => 'field'}</td>
        </tr>
        
        <tr>
            <td>{label popis /}</td>
            <td colspan="6">{input popis}</td>
        </tr>
                <tr>
            <td>{label vybava /}</td>
            <td colspan="6">{input vybava}</td>
        </tr>
        <tr>
            <th colspan="6">Rozměry [cm]</th>
        </tr>  
        <tr>
            <td>{label sirka /}</td>
            <td>{input sirka class => 'small-field'} cm</td>

            <td>{label delka /}</td>

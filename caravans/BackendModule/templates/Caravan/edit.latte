        <tr>
            <td>{label hmotnost_t /}</td>
            <td>{input hmotnost_t class => 'small-field'} kg</td>
            <td>{label hmotnost_max /}</td>
            <td>{input hmotnost_max class => 'small-field'} kg</td>
        </tr>
        <tr>
            <td>{label specialni_edice/}</td>
            <td colspan="6">{input specialni_edice class => 'field'}</td>
        </tr>
        <tr>
            <td></td>
            <td>{input odeslat class=>"button"}</td>
        </tr>
    </table>
{/form}

{control galleryManager}
<div style="background:#EFCA4B; color:#818181; text-align: left; padding:7px 10px; font-weight: bold">Prohlížeč galerie
<a onclick="hide()" style="float: right" id="hideLink">Skrýt</a>
</div>
<script type="text/javascript">
    function hide(){
        if($("#hideLink").text() == "Zobrazit")
               $("#hideLink").text("Skrýt");
           else $("#hideLink").text("Zobrazit");
       $("#hide").toggle(500);
}
</script>
<div id="hide">
{control galleryManager:Gallery}
</div>